<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FCF7F7">

    <RelativeLayout
        android:id="@+id/rel_intro"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".DiseaseDetailsActivity"
        tools:showIn="@layout/activity_disease_details">

        <TextView
            android:id="@+id/language_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Choose a Language"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/englishcv"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardBackgroundColor="#FDFDFD"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            android:layout_below="@id/language_tv"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            card_view:cardUseCompatPadding="true"
            xmlns:tools="http://schemas.android.com/tools">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/englishiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                <TextView
                    android:id="@+id/englishtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/englishiv"
                    android:text="English"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/hindicv"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardBackgroundColor="#FDFDFD"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            android:layout_below="@id/englishcv"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            card_view:cardUseCompatPadding="true"
            xmlns:tools="http://schemas.android.com/tools">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/arrowiv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                <TextView
                    android:id="@+id/hinditv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/arrowiv"
                    android:text="हिंदी"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/punjabicv"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardBackgroundColor="#FDFDFD"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            android:layout_below="@id/hindicv"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            card_view:cardUseCompatPadding="true"
            xmlns:tools="http://schemas.android.com/tools">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/arrowiv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                <TextView
                    android:id="@+id/punjabitv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/arrowiv"
                    android:text="ਪੰਜਾਬੀ"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/bengalicv"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardBackgroundColor="#FDFDFD"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            android:layout_below="@id/punjabicv"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            card_view:cardUseCompatPadding="true"
            xmlns:tools="http://schemas.android.com/tools">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/arrowiv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                <TextView
                    android:id="@+id/bengalitv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/arrowiv"
                    android:text="বাঙালি"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/tamilcv"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardBackgroundColor="#FDFDFD"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            android:layout_below="@id/bengalicv"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            card_view:cardUseCompatPadding="true"
            xmlns:tools="http://schemas.android.com/tools">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/arrowiv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                <TextView
                    android:id="@+id/tamiltv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/arrowiv"
                    android:text="தமிழ்"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/telugucv"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardBackgroundColor="#FDFDFD"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            android:layout_below="@id/tamilcv"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            card_view:cardUseCompatPadding="true"
            xmlns:tools="http://schemas.android.com/tools">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/arrowiv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                <TextView
                    android:id="@+id/telugutv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/arrowiv"
                    android:text="తెలుగు"
                    android:paddingLeft="15dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>